<h1>Listing links</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Href</th>
    <th>Icon</th>
    <th>Panel</th>
    <th>Order</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%=h link.name %></td>
    <td><%=h link.href %></td>
    <td><%=h link.icon %></td>
    <td><%=h link.panel %></td>
    <td><%=h link.order %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New link', new_link_path %>