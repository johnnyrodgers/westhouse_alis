<div id="container">

	<%= render :partial => "menu" %>
	
	<div id="controls">
		<div id="lights">
			<%= render :partial => "controls/UI/vertical_toggle", :locals => { :toggle_id => "garage_interior", :state => @status[:lights][:garage_interior], :label => "Garage Interior", :device_id => DEVICES["garage_interior"] } %>
			<%= render :partial => "controls/UI/vertical_toggle", :locals => { :toggle_id => "west_flood", :state => @status[:lights][:west_flood], :label => "Garage Entry", :device_id => DEVICES["west_flood"] } %>
			<%= render :partial => "controls/UI/vertical_toggle", :locals => { :toggle_id => "west_entry", :state => @status[:lights][:west_entry], :label => "West Entry", :device_id => DEVICES["west_entry"] } %>
			<%= render :partial => "controls/UI/vertical_toggle", :locals => { :toggle_id => "garage_sign", :state => @status[:lights][:garage_sign], :label => "House Sign", :device_id => DEVICES["garage_sign"] } %>
			<%= render :partial => "controls/UI/vertical_toggle", :locals => { :toggle_id => "hallway", :state => @status[:lights][:hallway], :label => "Hallway", :device_id => DEVICES["hallway"] } %>
			<%= render :partial => "controls/UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "living_dimmer", :value => @status[:lights][:living_dimmer], :label => "Living", :device_id => DEVICES["living_dimmer"] } %>
			<%= render :partial => "controls/UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "dining_dimmer", :value => @status[:lights][:dining_dimmer], :label => "Dining", :device_id => DEVICES["dining_dimmer"] } %>
		</div>
		<hr />
		<div id="presets">
			<%= render :partial => "controls/UI/preset_buttons", :locals => { :set_id => "garage_preset_buttons" } %>
		</div>
		<div id="hvac">
			<%= render :partial => "controls/UI/up_down", :locals => { :control_id => "thermostat_garage", :device_id => DEVICES["thermostat_garage"], :subsystem => "hvac", :key => "thermostat_garage", :value => @status[:hvac][:thermostat_garage], :label => "GARAGE", :units => "&deg;C" } %>
		</div>
	</div>
	
	<%= render :partial => "app_switcher" %>
	
</div>

<script type="text/javascript">
	<%= render :partial => "controls.rjs", :locals => { :panel => "garage" } %>
</script>